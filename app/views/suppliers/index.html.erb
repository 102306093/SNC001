<% @supplier.each do |supplier| %>
	<div style="display:table; margin-top:30px; width:1200p; border:2px solid green;">
   		<a href="<%= supplier_path(supplier) %>">
			<div class="article_txt">
				<h1><%= supplier.supname%></h1>
			</div>
			<div class="article_pic" style="overflow:hidden; width:1100px;">
				<img style=" width:1100px; height:400px; margin-top:-100px;" src="<%= supplier.pic1%>" >
			</div>
		</a>
		<div class="article_introduce">
			<p><%= supplier.introduce %></p>
		</div>
		<div class="text-right">
			<button onclick="javasctipt:location.href='<%= supplier_path(supplier) %>'"> 查看全文</button>
		</div>
	</div>
<%end%>