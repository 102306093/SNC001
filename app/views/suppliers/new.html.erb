<h2>New supplier's story</h2>

<%= form_for @supplier do |f|%>

<table style="width:70%">
	<tr>
		<td>Name</td>
		<td><%= f.text_field :supname%></td>
  	</tr>
  	<tr>
    	<td>Adress</td>
		<td><%= f.text_field :address%></td>
  	</tr>
  	<tr>
    	<td>Email</td>
		<td><%= f.text_field :email%></td>
  	</tr>
  	<tr>
    	<td>Telephone</td>
		<td><%= f.text_field :tel%></td>
  	</tr>
  	<tr>
    	<td>Cellphone</td>
		<td><%= f.text_field :cellphone%></td>
  	</tr>
  	<tr>
    	<td>Picture</td>
		<td><%= f.text_field :pic1%></td>
  	</tr>
  	<tr>
    	<td>Introduce</td>
		<td><%= f.text_field :introduce%></td>
  	</tr>
  	<tr>
  		<td>Content</td>
  		<td><%= f.text_field :content%></td>
  	</tr>
  	<tr>
  		<td>Background-image</td>
  		<td><%= f.text_field :bgimg%></td>
  	</tr>
</table> 

<%= f.submit%>

<%end%>