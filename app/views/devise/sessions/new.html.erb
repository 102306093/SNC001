
<script>
  $(document).ready(function(){
    $(function(){
      var h = $(window).height();
      $('div.sign_in').css({
        minHeight: h-180
      });
    });    
  });
</script>

<body class="main">

<div class="container" style="margin-top:60px; margin-bottom:30px">
<div class="col-md-2"></div>
<div class="sign_in col-md-8 content" style="padding:10px 20px">
<h3 style="text-align:center">登入</h3>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,label:"電子信箱", required: false, autofocus: true %>
    <%= f.input :password,label:"密碼", required: false %>
    <%= f.input :remember_me,label:"記住我", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions" style="margin-bottom:10px">
    <%= f.button :submit, "登入" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>  
</body>