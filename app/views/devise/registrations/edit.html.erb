<h2>編輯</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
     <%= f.input :username,  label:"姓名"%>
     <%= f.input :u_phone,label:"聯絡電話" %>
     <%= f.input :email, required: true, autofocus: true %>
     <%= f.input :u_homeaddress, label:"送貨地址-宅配" %>
     <%= f.input :u_convenienceaddress, label:"送貨地址-超商" %>
    <%= f.input :current_password, label:"密碼驗證", hint: "輸入目前密碼授權此次更新", required: true %>
    
    <%= f.input :password,label:"密碼", autocomplete: "off", hint: "如果不想更動請留白", required: false %>
    <%= f.input :password_confirmation,label:"請再次確認密碼", required: false %>
 
  </div>

  <div class="form-actions">
    <%= f.button :submit, "更新" %>
  </div>
<% end %>


<%= link_to "Back", :back %>
